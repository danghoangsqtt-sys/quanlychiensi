{
  "name": "quan-ly-ho-so-chien-si",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Desktop application for managing soldier profiles using Electron, SQLite, and PDF export.",
  "author": "DHsystem",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.dhsystem.quanlychien",
    "productName": "QuanLyHoSoChienSi",
    "asar": true,
    "asarUnpack": [
      "**/*.db"
    ],
    "extraResources": [
      "assets/**"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "better-sqlite3": "11.0.0",
    "bootstrap": "^5.3.0",
    "pdf-lib": "^1.17.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  }
}